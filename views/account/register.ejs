<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/') 
} %>

<%- message %>

<p class="reg"><i>All inputs are required.</i></p>
<form class="form" method="post" action="/account/register">
    <fieldset>
        <label>First Name <input type="text" name="account_firstname" required value="<%= locals.account_firstname %>"></label>
        <label>Last Name <input type="text" name="account_lastname" required value="<%= locals.account_lastname %>"></label>
        <label>Email address <input type="email" name="account_email" required value="<%= account_email %>"></label>
        <label>Password <input type="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"></label>
        <div class="password"><b>Password must be at least 12 characters in length and include at least 1 capital letter, 1 number, and 1 special character.</b></div>
        <label><input type="submit" id="REGISTER" value="REGISTER"></label>
    </fieldset>
</form>
<p class="password"><b>Password must be at least 12 characters in length and include at least 1 capital letter, 1 number, and 1 special character.</b></p>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>