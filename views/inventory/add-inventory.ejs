<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { $>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
    <% } %>

<form class="form" method="post" action="/views/inventory/add-inventory.ejs">
    <fieldset>
        <label>Classification <select class="dropdown" name="classification">
            <option value="custom">Custom</option>  
            <option value="sedan">Sedan</option>
            <option value="sport">Sport</option>
            <option value="suv">SUV</option>
            <option value="truck">Truck</option>  
        </label>
        <label>Make <input type="text" minlength="3" name="inv_make" placeholder="Min of 3 characters" required value="<% locals.inv_make %>"></label>
        <label>Model <input type="text" minlength="3" name="inv_model" placeholder="Min of 3 characters" required value="<% locals.inv_model %>"></label>
        <label>Description <textarea name="inv_description" rows="5" cols="30" required value="<% locals.inv_description %>"></textarea></label>
        <label>Image Path <input type="text" name="inv_image" placeholder="/images/vehicles/no-image.png" value="<% locals.inv_image %>"></label>
        <label>Thumbnail Path <input type="text" name="inv_thumbnail" placeholder="/images/vehicles/no-image.png" value="<% locals.inv_thumbnail %>"></label>
        <label>Price <input type="number" name="inv_price" placeholder="decimal or integer" required value="<% locals.inv_price %>"></label>
        <label>Year <input type="text" minlength="4" maxlength="4" name="inv_year" placeholder="4-digit year" required value="<% locals.inv_year %>"></label>
        <label>Miles <input type="number" name="inv_miles" placeholder="digits only" required value="<% locals.inv_miles %>"></label>
        <label>Color <input type="text" name="inv_color" required value="<% locals.inv_color %>"></label>
    </fieldset>
</form>